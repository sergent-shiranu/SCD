            android:textColor="#000000" />
        
        
        
        
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Lecteur extérieur inscrit"
            android:textStyle="bold"
            android:textColor="#AA5303" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:text="Emprunter jusqu\'à 5 documents \nAccéder aux ressources électroniques \nPhotocopier ou imprimer sur demande"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000000" />
        
        
        <Button
            android:id="@+id/button1"
            android:text="Service Questions?Réponses!"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border"/>
        
        
        
    </LinearLayout>

</ScrollView>